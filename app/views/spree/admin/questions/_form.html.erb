<div data-hook="admin_product_question_form_fields">
  <%= f.field_container :content, class: ['form-group'] do %>
    <%= f.label :content, "#{Spree::Question.model_name.human}*" %>
    <%= f.text_area :content, { rows: 4, class: 'form-control' } %>
    <%= f.error_message_on :content %>
  <% end %>

  <%= f.fields_for :answer, @question.answer_for_form, class: ['form-group'] do |a| %>
    <%= a.label :content, raw(Spree::Answer.model_name.human + content_tag(:span, ' *', class: 'required')) %>
    <%= a.text_area :content, { rows: "4", class: 'form-control' } %>
  <% end %>

  <%= f.field_container :is_visible, class: ['form-group'] do %>
    <%= f.check_box :is_visible %>
    <%= f.label :is_visible %>
  <% end %>
</div>

